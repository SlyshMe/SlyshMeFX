{
  "productName": "SlyshMeFX",
  "version": "0.1.0",
  "identifier": "slyshmefx.pvdev.xyz",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "SlyshMe FX",
        "label": "main",
        "fullscreen": true,
        "transparent": true,
        "decorations": false,
        "shadow": false
      },
      {
        "title": "SlyshMe FX - Settings",
        "label": "settings",
        "width": 200,
        "height": 550,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "url": "/settings",
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/EqualizerAPO-x64-1.4.2.exe",
      "icons/128x128.png"
    ]
  }
}
